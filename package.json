{
  "name": "sec-friendly-api",
  "version": "1.0.0",
  "description": "SEC EDGAR Human-Friendly API with MCP Server",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sec-friendly-api": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "dev": "tsc && node dist/index.js",
    "dev:stdio": "tsc && node dist/index.js --stdio",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "pm2:start": "chmod +x scripts/start.sh && ./scripts/start.sh",
    "pm2:stop": "pm2 stop sec-friendly-api",
    "pm2:restart": "pm2 restart sec-friendly-api",
    "pm2:delete": "pm2 delete sec-friendly-api",
    "pm2:logs": "pm2 logs sec-friendly-api",
    "pm2:monit": "pm2 monit sec-friendly-api",
    "inspect": "npx @modelcontextprotocol/inspector --config mcp.json --server sec-friendly-api",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sec",
    "edgar",
    "financial",
    "api",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "pm2": "^5.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
